<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".make_order_1">

    <LinearLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/nombre_order1"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="41dp"
                android:text="@string/nombre_dato" />

            <TextView
                android:id="@+id/cantidad"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="137dp"
                android:layout_marginBottom="18dp"
                android:text="@string/cantidad"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="24dp" />

            <TextView
                android:id="@+id/set_dato_cant"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="94dp"
                android:layout_toEndOf="@+id/seekBar"
                android:text="@string/_0" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="157dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="67dp"
                android:layout_marginBottom="97dp" />

            <TextView
                android:id="@+id/calculo"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/enviar_orden"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="54dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="9dp"
                android:text="@string/calculo"
                app:layout_constraintBottom_toTopOf="@+id/nombre_order1"
                app:layout_constraintEnd_toStartOf="@+id/nombre_order1" />

            <Button
                android:id="@+id/enviar_orden"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="86dp"
                android:layout_marginBottom="20dp"
                android:text="@string/ordenar"
                android:textSize="10sp"
                tools:ignore="RelativeOverlap,SmallSp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>