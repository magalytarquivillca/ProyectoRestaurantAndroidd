<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_restaurant_form">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="20dp"
        android:text="@string/crear_restaurante"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/nombre_texto"
        app:layout_constraintEnd_toEndOf="@+id/lugares"
        app:layout_constraintStart_toStartOf="@+id/nombre_texto"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/nombre_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/nombre"
        app:layout_constraintBottom_toTopOf="@+id/nit_texto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        tools:ignore="LabelFor,MissingConstraints" />

    <EditText
        android:id="@+id/nit_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/nit"
        app:layout_constraintBottom_toTopOf="@+id/propietario_texto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_texto"
        tools:ignore="LabelFor,MissingConstraints" />

    <EditText
        android:id="@+id/propietario_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="49dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/propietario"
        app:layout_constraintBottom_toTopOf="@+id/lugares"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nit_texto"
        tools:ignore="LabelFor,MissingConstraints" />

    <EditText
        android:id="@+id/calle_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/calle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/propietario_texto"
        tools:ignore="LabelFor,MissingConstraints" />


    <TextView
        android:id="@+id/lugares"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:text="@string/lugar"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/select_place"
        app:layout_constraintStart_toStartOf="@+id/calle_texto"
        app:layout_constraintTop_toBottomOf="@+id/propietario_texto"
        tools:ignore="MissingConstraints" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/select_place"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/crear_restaurante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lugares"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/crear_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="@string/crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_place"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>